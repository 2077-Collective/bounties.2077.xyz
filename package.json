{
	"name": "2077-bounties",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "NODE_ENV=development vite dev",
		"build": "npm run db:migrate && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "npm run test:e2e && npm run test:integration",
		"pretest:e2e": "if [ \"$CI\" != \"true\" ]; then NODE_ENV=test docker compose up -d; fi",
		"posttest:e2e": "if [ \"$CI\" != \"true\" ]; then NODE_ENV=test docker compose down; fi",
		"test:e2e": "playwright test",
		"pretest:integration": "if [ \"$CI\" != \"true\" ]; then NODE_ENV=test docker compose up -d; fi",
		"posttest:integration": "if [ \"$CI\" != \"true\" ]; then NODE_ENV=test docker compose down; fi",
		"test:integration": "vitest run --reporter=basic --disable-console-intercept",
		"db:seed": "vite-node scripts/db/seed.ts",
		"db:push": "drizzle-kit push",
		"db:migration": "drizzle-kit generate",
		"db:drop": "drizzle-kit drop",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.5.26",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"@synthetixio/synpress": "^3.7.3",
		"@types/eslint": "^9.6.0",
		"@types/ws": "^8.5.12",
		"autoprefixer": "^10.4.20",
		"drizzle-kit": "^0.24.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"husky": "^9.1.5",
		"postcss": "^8.4.41",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.4.9",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.3",
		"vite-node": "^2.0.5",
		"vitest": "^2.0.0"
	},
	"type": "module",
	"dependencies": {
		"@2077collective/persona": "^0.0.1",
		"@fontsource-variable/inter": "^5.0.21",
		"@neondatabase/serverless": "^0.9.4",
		"@tenkeylabs/dappwright": "^2.8.5",
		"@types/node": "^22.2.0",
		"bits-ui": "^0.21.13",
		"clsx": "^2.1.1",
		"date-fns": "^3.6.0",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.33.0",
		"drizzle-zod": "^0.5.1",
		"lucide-svelte": "^0.436.0",
		"nanoid": "^5.0.7",
		"postgres": "^3.4.4",
		"tailwind-merge": "^2.5.2",
		"tailwind-variants": "^0.2.1",
		"test-sveltekit-web-auth": "0.0.1",
		"ws": "^8.18.0",
		"zod": "^3.23.8"
	}
}
